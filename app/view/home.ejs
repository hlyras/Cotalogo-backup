<html>

<head>
	<%- include('./partials/head.ejs') %>
	<style>
		.carousel {
			position: relative;
			width: 100%;
		}

		.slides {
			display: flex;
		}

		.slides img {
			height: auto;
			display: none;
		}

		.prev,
		.next {
			cursor: pointer;
			position: absolute;
			top: 50%;
			width: auto;
			margin-top: -22px;
			padding: 16px;
			color: white;
			font-weight: bold;
			font-size: 18px;
			transition: 0.6s ease;
			border-radius: 0 3px 3px 0;
			user-select: none;
		}

		.next {
			right: 0;
			border-radius: 3px 0 0 3px;
		}

		.prev:hover,
		.next:hover {
			background-color: rgba(0, 0, 0, 0.8);
		}

		.image-card {
			object-fit: contain;
			width: 100%;
		}

		.shadow-st-hover:hover {
			box-shadow: 5px 5px 5px var(--solid);
		}
	</style>
</head>

<body>
	<%- include('./partials/userHeader.ejs') %>
	<%- include('./partials/nav.ejs') %>

	<section class="container h-center">
		<div class="box b2-3 ground radius-5 padding-10">
			<h1 class="box b1 underline lucida-grande center">Painel de controle</h1>

			<div class="box b4 container border padding-10 margin-top-10">
				<div class="carousel h-center">
					<div class="slides-1 container h-center border">
						<div class="box b1 container h-center">
							<img src="/images/icon/add-image.png" class="mobile-box b2 image-card height-200 center">
						</div>
						<div class="box b1 container h-center">
							<img src="/images/icon/add.png" class="mobile-box b2 image-card height-200 center">
						</div>
						<div class="box b1 container h-center">
							<img src="/images/icon/admin.png" class="mobile-box b2 image-card height-200 center">
						</div>
					</div>
					<a class="prev" onclick="carousel1.plusSlides(-1)">&#10094;</a>
					<a class="next" onclick="carousel1.plusSlides(1)">&#10095;</a>
				</div>

				<div class="carousel h-center">
					<div class="slides-2 container h-center border">
						<div class="box b1 container h-center">
							<img src="/images/icon/add-image.png" class="mobile-box b2 image-card height-200 center">
						</div>
						<div class="box b1 container h-center">
							<img src="/images/icon/add.png" class="mobile-box b2 image-card height-200 center">
						</div>
						<div class="box b1 container h-center">
							<img src="/images/icon/admin.png" class="mobile-box b2 image-card height-200 center">
						</div>
					</div>
					<a class="prev" onclick="carousel2.plusSlides(-1)">&#10094;</a>
					<a class="next" onclick="carousel2.plusSlides(1)">&#10095;</a>
				</div>
			</div>

		</div>
	</section>

	<%- include('./partials/loader.ejs') %>
</body>
<footer>
	<%- include('./partials/footer.ejs') %>

	<script>
		function Carousel(name) {
			let slideIndex = 1;
			let slides = document.querySelectorAll(`.slides-${name} img`);

			function init() {
				showSlides(slideIndex);
			}

			function plusSlides(n) {
				showSlides(slideIndex += n);
			}

			function showSlides(n) {
				let i;
				if (n > slides.length) {
					slideIndex = 1;
				}
				if (n < 1) {
					slideIndex = slides.length;
				}
				for (i = 0; i < slides.length; i++) {
					slides[i].style.display = "none";
				}
				slides[slideIndex - 1].style.display = "block";
			}

			return {
				init,
				plusSlides,
			};
		};

		let carousel1 = Carousel("1");
		let carousel2 = Carousel("2");

		document.addEventListener("DOMContentLoaded", function () {
			carousel1.init();
			carousel2.init();
		});
	</script>
</footer>

</html>
<div id="create-cob-btn" class="box b3 container ground border radius-5 padding-5 margin-top-5 h-center">
  <img src="/images/icon/pix.png" class="image-prop width-100">

  <div class="box b1 btn-act lucida-grande bold border radius-5 margin-top-5 padding-5 center pointer"
    onclick="lib.display('create-cob-form', '');lib.display('create-cob-btn', 'none')">
    Recarregar Saldo com PIX
  </div>
</div>


<form id="create-cob-form" class="box b2 container border radius-5 margin-top-5 h-center" style="display: none;">
  <div class="mobile-box b12"></div>
  <div class="mobile-box b5-6 lucida-grande bold georgia center">Realizar recarga PIX</div>
  <div class="mobile-box b12 lucida-grande bold center pointer"
    onclick="lib.display('create-cob-form', 'none');lib.display('create-cob-btn', '')">
    x
  </div>
  <div class="box b1 center">
    <img src="/images/icon/pix.png" class="image-prop width-100">
  </div>
  <input type=" number" name="cost" class="box b4 em12 input-generic center bold margin-top-5" step="0.01" value="0.00"
    onfocus="if(this.value < 0.01){this.value=''}" onblur="if(this.value < 0.01){this.value=parseFloat(0).toFixed(2)}"
    role="presentation" autocomplete="off" />
  <input type="submit" class="box b1 btn-act lucida-grande bold border radius-5 margin-top-5 padding-5 center pointer"
    value="Gerar PIX">
</form>

<div id="qrcode-box" class="box" style="display: none;">
  <img id="qrcode-image" src="">
  <input type="text" id="copia-e-cola" value="Valor a ser copiado">
</div>